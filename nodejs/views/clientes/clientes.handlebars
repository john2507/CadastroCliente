<h2>LISTA DE CLIENTES</h2>
<hr>
<a href="/clientes/cadastro"> <button class="btn btn-success">Novo Cliente</button></a>
{{!-- <a href="/admin/usuarios"> <button type="submit" class="btn btn-success">Listar Clientes</button></a> --}}
<a href="/usuarios/login"> <button type="submit" class="btn btn-success">voltar</button></a><br>
{{#each clientes}}

<table class="table mt-4">
  <thead class="thead-dark">
    <tr>
      <th scope="col">NOME</th>
      <th scope="col">BANCO</th>
      <th scope="col">PRODUTO</th>
      <th scope="col">VALOR</th>
      <th scope="col">STATUS</th>
      <th scope="col">OBS</th>
      <th scope="col">FONE</th>
      <th scope="col">Data</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      
      <td>{{nome}}</td>
      <td>{{banco}}</td>
      <td>{{produto}}</td>
        <td>R${{valor}}</td>
         <td>{{status}}</td>
          <td>{{obs}}</td>
           <td>{{telefone}}</td>
         
           <td><small>Data da Criacao:{{date}}</small><br></td>
           

    </tr>
    
  </tbody>
  
</table>


<form action="/clientes/clientes/delete" method="POST">
        <a href="/clientes/clientes/edit/{{_id}}"><button type="button" class="btn btn-primary mt-1">Editar Clientes</button></a>      
             <input type="hidden" name="id" value="{{_id}}">
             <button type="submit" class="btn btn-danger mt-1">Exluir Clientes</button>
</form>




